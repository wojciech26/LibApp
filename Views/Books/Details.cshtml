@model LibApp.Models.Book
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
@if (this.User.IsInRole("Owner") || this.User.IsInRole("StoreManager"))
{
    <p>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit book</a>
    </p>
}

<ul>
    <li>Author Name: @Model.AuthorName</li>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.ToShortDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
